<% provide(:title, "编辑个人资料") %>
<h1>编辑个人资料</h1>
<div class="row zj">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation, "确认密码" %>
        <%= f.password_field :password_confirmation %>
        <p>
            <%= f.submit "保存更改", class: "btn btn-primary" %>
        </p>
        <% end %>
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">修改</a>
  </div>
</div>